<!DOCTYPE html>
<html>
<head>
    <title><%=campground.name%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body style="margin-bottom: 30px">

    <!--nav-->
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand"href="/">Yelp Camp</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2"id="navbarNavAltMarkup">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/">Login</a>
                                </li>
                                <li class="nav-item">
                                        <a class="nav-link" href="/">Sign Up</a>
                                    </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Log Out</a>
                                </li>
                            </ul>        
                    </div>
                </div>
        </nav>
    <!--nav-->   

<div class="container" style="margin-top: 25px">
    <div class="row">
        <div class="col-md-3">
            <p class="lead" style="margin-top: 10px">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">

                <div class="card card-block border-dark" style="background-color:lemonchiffon">
                        <img class="card-img-top" src="<%=campground.image%>">
                        <div class="card-body">
                            <h4 class="float-right">$9.99/night</h4>
                          <h2 class="card-title"><a href="#"><%=campground.name%></a></h2>
                          <p class="card-text"><%=campground.description%></p>
                        </div>
                      </div>
<!--
  <div class="img-thumbnail img-responsive">
                <img src="<%=campground.image%>" >
                <div class="caption-full">
                    <h4 class="float-right">$9.99/night</h4>
                    <h2></h2>
                    <p><%=campground.description%></p>
                </div>
            </div>

-->
          

            <div class="card card-block border-dark bg-light" style="margin-top: 15px">
                <div class="card-body">    
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author %></strong>
                                <br>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>    
                    <% }) %>
                    <hr>
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new" style="margin: 10px">Add New Comment</a>
                    </div>
                </div>  
            </div>
        </div>
    </div>

</div>




<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
